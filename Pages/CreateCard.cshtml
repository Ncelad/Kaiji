@page
@using Kaiji.Pages
@model CreateCardModel
@{
    ViewData["Title"] = "Create Row";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="NewCard.Title"></label>
                    <input name="title" asp-for="NewCard.Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NewCard.Description"></label>
                    <input name="description" asp-for="NewCard.Description" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
                <div class="form-group">
                    @{Dictionary<string, string> dict = new Dictionary<string, string>() { { "id", CreateCardModel.Instance.CurrentProjectId.ToString() } };}
                    <a asp-page="./ProjectEdit" asp-all-route-data="dict">Back</a>
                </div>
            </form>
        </section>
    </div>
</div>