@page
@using Kaiji.Pages
@model CreateProjectModel
@{
    ViewData["Title"] = "Create Project";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="NewProject.Title"></label>
                    <input name="title" asp-for="NewProject.Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NewProject.Description"></label>
                    <input name="description" asp-for="NewProject.Description" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Index">Back</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
